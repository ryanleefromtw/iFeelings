<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.firebase.udacity.friendlychat.Settings">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#404040"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_alignLeft="@+id/frameLayout"
                    android:layout_alignStart="@+id/frameLayout"
                    android:layout_alignTop="@+id/frameLayout"
                    android:layout_gravity="center"
                    android:src="@drawable/the_girl" />

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/circle_image_view_oval">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/ic_photo_camera_color_dark"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        />
                </FrameLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:background="#ffffff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="匿名"
                android:textColor="#bebebe"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_settings_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp"
                android:text="Howard Ho"
                android:textColor="#ffffff"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="地區"
                android:textColor="#bebebe"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_settings_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp"
                android:text="台北市 蘆洲區"
                android:textColor="#ffffff"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="個人描述"
                android:textColor="#bebebe"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_settings_personal_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp"
                android:text="喜歡淺水吃消夜"
                android:textColor="#ffffff"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="社群連結"
                android:textColor="#bebebe"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/facebook_icon" />


                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_gravity="top"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/line_icon" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/instgram" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/white" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
